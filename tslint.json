{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-eslint-rules",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "jsRules": {},
  "rules": {
    "no-var-requires": false,
    "prettier": true,
    "jsx-alignment": true,
    "jsx-key": true,
    "jsx-no-bind": true,
    "jsx-no-lambda": false,
    "jsx-space-before-trailing-slash": true,
    "jsx-self-close": true,
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "import-spacing": true,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "ordered-imports": [
      true,
      {
        "module-source-path": "full",
        "grouped-imports": true,
        "groups": [
          {
            "name": "react",
            "match": "^react.*",
            "order": 1
          },
          {
            "name": "internal modules",
            "match": "^@app.*",
            "order": 3
          },
          {
            "name": "relative dir",
            "match": "^[.].*",
            "order": 4
          },
          {
            "name": "node_modules",
            "match": ".*",
            "order": 2
          }
        ]
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "always",
          "imports": "always",
          "exports": "always"
        },
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "only-arrow-functions": true,
    "no-unused-variable": [true, {"ignore-pattern": "^_"}],
    "no-any": { "severity": "warning" }
  },
  "rulesDirectory": []
}
